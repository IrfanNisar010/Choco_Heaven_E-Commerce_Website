          <div class="row">
            <div class="col-12 pb-3">
              <h4>Add Brands</h4>
              <p class="text-gray">Input details of new Brands</p>
            </div>
          </div>
          <div class="col-xl">
            <div class="card mb-4">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Add Info</h5>
              </div>
              <div class="card-body">
                  <div class="mb-3">
                    <form action="/admin/addBrands" method="post" id="myForm" enctype="multipart/form-data">
                        <div class="mb-3">
                          <label class="form-label" for="brandName">Brand Name</label>
                          <div class="form-group">
                            <div class="input-group input-group-merge">
                              <span id="brandNameIcon" class="input-group-text"><i class="bx bx-buildings"></i></span>
                              <input type="text" class="form-control" id="brandName" name="brandName" placeholder="Lindt" aria-describedby="brandNameIcon" />
                            </div>
                          </div>
                        </div>
                        <div class="mb-3">
                          <label for="image" class="form-label">Brand image upload</label>
                          <input class="form-control" type="file" id="formFile" name="brandsImage" accept="image/png, image/jpeg, image/webp" onchange="updateLabelImg(this)" />
                        </div>
                        <div class="form-check">
                          <input type="checkbox" class="form-check-input" name="isAvailable" value="1" id="isAvailable">
                          <label class="form-check-label" for="isAvailable">Is Available</label>
                        </div>
                        <div class="mb-3">
                          <label class="form-label" for="description">Description</label>
                          <div class="input-group input-group-merge">
                            <span id="descriptionIcon" class="input-group-text"><i class="bx bx-comment"></i></span>
                            <textarea class="form-control" id="description" name="description" placeholder="Most luxury Chocolate brand" aria-describedby="descriptionIcon"></textarea>
                          </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width: 169px;">Add</button>
                        <button type="button" class="btn btn-white" style="width: 140px;" onclick="clearForm()">Cancel</button>
                      </form>                      
            </div>
            </div>
          </div>

          <script>
            document.getElementById('myForm').addEventListener('submit', function(event) {
                event.preventDefault();
                const form = document.getElementById('myForm');
                const formData = new FormData(form);
            
                fetch('/admin/addBrands', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "New Brand Added",
                            text: "New Brand Added Successfully",
                            icon: "success"
                        }).then(() => {
                            window.location.href = '/admin/brandsManage';
                        });
                    } else {
                        const validationMessage = document.getElementById('validationMessages');
                        validationMessage.style.display = 'block';
                        validationMessage.innerHTML = data.message;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error Adding Brand');
                });
            });
            </script>
            
          
