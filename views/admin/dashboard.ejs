     <script>
  // Pie Chart script Start
  const usersCount = 150;
      const totalOrders = 200;
      const completedOrders = 120;
      const returnedOrders = 30;

      // Get the canvas context
      const ctx = document.getElementById('orderStatusPieChart').getContext('2d');

      // Create gradient colors for each segment
      const blueGradient = ctx.createLinearGradient(0, 0, 0, 400);
      blueGradient.addColorStop(0, 'rgba(58, 123, 213, 0.5)');
      blueGradient.addColorStop(1, 'rgba(58, 123, 213, 0.9)');

      const orangeGradient = ctx.createLinearGradient(0, 0, 0, 400);
      orangeGradient.addColorStop(0, 'rgba(255, 159, 64, 0.5)');
      orangeGradient.addColorStop(1, 'rgba(255, 159, 64, 0.9)');

      const greenGradient = ctx.createLinearGradient(0, 0, 0, 400);
      greenGradient.addColorStop(0, 'rgba(76, 175, 80, 0.5)');
      greenGradient.addColorStop(1, 'rgba(76, 175, 80, 0.9)');

      const redGradient = ctx.createLinearGradient(0, 0, 0, 400);
      redGradient.addColorStop(0, 'rgba(255, 87, 34, 0.5)');
      redGradient.addColorStop(1, 'rgba(255, 87, 34, 0.9)');

      // Create gradients for hover effect
      const blueHoverGradient = ctx.createLinearGradient(0, 0, 0, 400);
      blueHoverGradient.addColorStop(0, 'rgba(58, 123, 213, 0.7)');
      blueHoverGradient.addColorStop(1, 'rgba(58, 123, 213, 1)');

      const orangeHoverGradient = ctx.createLinearGradient(0, 0, 0, 400);
      orangeHoverGradient.addColorStop(0, 'rgba(255, 159, 64, 0.7)');
      orangeHoverGradient.addColorStop(1, 'rgba(255, 159, 64, 1)');

      const greenHoverGradient = ctx.createLinearGradient(0, 0, 0, 400);
      greenHoverGradient.addColorStop(0, 'rgba(76, 175, 80, 0.7)');
      greenHoverGradient.addColorStop(1, 'rgba(76, 175, 80, 1)');

      const redHoverGradient = ctx.createLinearGradient(0, 0, 0, 400);
      redHoverGradient.addColorStop(0, 'rgba(255, 87, 34, 0.7)');
      redHoverGradient.addColorStop(1, 'rgba(255, 87, 34, 1)');

      // Data for the pie chart
      const data = {
        labels: ["Users", "Total Orders", "Completed Orders", "Returned Orders"],
        datasets: [{
          label: "Choco Heaven Dashboard Statistics",
          data: [usersCount, totalOrders, completedOrders, returnedOrders],
          backgroundColor: [
            blueGradient,  // Users - Blue gradient
            orangeGradient,  // Total Orders - Orange gradient
            greenGradient,   // Completed Orders - Green gradient
            redGradient    // Returned Orders - Red gradient
          ],
          hoverBackgroundColor: [
            blueHoverGradient,  // Users - Blue gradient on hover
            orangeHoverGradient,  // Total Orders - Orange gradient on hover
            greenHoverGradient,   // Completed Orders - Green gradient on hover
            redHoverGradient    // Returned Orders - Red gradient on hover
          ],
          hoverBorderColor: "#ffffff", // White border on hover for pop effect
          hoverBorderWidth: 4,
          hoverOffset: 20, // Offset on hover for 3D effect
          borderWidth: 2, // Thinner borders for a sleek look
        }]
      };

      // Configurations for the pie chart with animation and shadow effects
      const config = {
        type: 'pie',
        data: data,
        options: {
          responsive: true,
          animation: {
            animateScale: true, // Adds scale animation
            animateRotate: true, // Adds rotation animation
            duration: 2000,  // Animation duration
            easing: 'easeOutCubic', // Smooth cubic easing effect
          },
          plugins: {
            legend: {
              position: 'top',
              labels: {
                font: {
                  size: 14,
                  weight: '600'
                },
                color: '#333'
              }
            },
            tooltip: {
              backgroundColor: 'rgba(255, 255, 255, 0.9)', // Light background for tooltips
              titleColor: '#000',
              bodyColor: '#000',
              borderWidth: 1,
              borderColor: '#ddd',
              displayColors: false,
              bodyFont: {
                size: 14,
                weight: 'bold'
              }
            },
          },
          elements: {
            arc: {
              borderWidth: 2,
              borderColor: 'rgba(0, 0, 0, 0.1)', // Subtle shadow effect for depth
              hoverBorderWidth: 4,
              hoverBorderColor: '#ffffff', // White border on hover for 3D effect
              hoverOffset: 15, // Adds 3D effect on hover
            }
          },
          layout: {
            padding: 20
          }
        }
      };

      // Render the pie chart
      new Chart(ctx, config);
  // Pie Chart script End
