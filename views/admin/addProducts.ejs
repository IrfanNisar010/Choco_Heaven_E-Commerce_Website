<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
<script>
let currentPreviewId;
let cropper;

function calculateDiscount() {
    const discountPrice = parseFloat(document.getElementById('discountPrice').value);
    const discount = parseFloat(document.getElementById('discount').value);

    if (isNaN(discountPrice) || isNaN(discount) || discountPrice <= 0 || discount < 0) {
        document.getElementById('discount').value = '';
        return;
    }

    const discountPercentage = ((discountPrice - discount) / discountPrice) * 100;
    document.getElementById('discount').value = discountPercentage.toFixed(2);
}

// Add an event listener to the original price field to recalculate the discount when the original price changes
document.getElementById('discountPrice').addEventListener('keyup', calculateDiscount);


function triggerInput(inputId) {
    document.getElementById(inputId).click();
}


function triggerInput(inputId) {
    document.getElementById(inputId).click();
}

function openCropper(event, previewId) {
    const file = event.target.files[0];
    if (file && file.type.startsWith('image/')) {
        const reader = new FileReader();
        reader.onload = function(e) {
            const modal = document.getElementById('cropperModal');
            modal.style.display = 'flex';
            const imageElement = document.getElementById('image-to-crop');
            imageElement.src = e.target.result;
            currentPreviewId = previewId;  

            if (cropper) {
                cropper.destroy();
            }
            cropper = new Cropper(imageElement, {
                aspectRatio: 1,
                viewMode: 1
            });
        };
        reader.readAsDataURL(file);
    }
}

function cropImage() {
    const canvas = cropper.getCroppedCanvas();
    const preview = document.getElementById(currentPreviewId);
    preview.style.backgroundImage = 'url(' + canvas.toDataURL() + ')';
    preview.innerHTML = `<i class="fa-regular fa-circle-xmark remove-icon" onclick="removeImage('${currentPreviewId}')"></i>`;
    closeCropper();
}

function closeCropper() {
    cropper.destroy();
    document.getElementById('cropperModal').style.display = 'none';
}

function removeImage(previewId) {
    const preview = document.getElementById(previewId);
    preview.style.backgroundImage = 'none';
    preview.innerHTML = '';
}

function resetImages() {
    for (let i = 1; i <= 4; i++) {
        removeImage(`preview-${i}`);
    }
}
// add product 
document.getElementById('myForm').addEventListener('submit', function(event) {
                event.preventDefault();
                const form = document.getElementById('myForm');
                const formData = new FormData(form);
            
                fetch('/admin/addProduct', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire({
                            title: "New Product Added",
                            text: "New Product Added Successfully",
                            icon: "success"
                        }).then(() => {
                            window.location.href = '/admin/productManage';
                        });
                    } else {
                        const validationMessage = document.getElementById('validationMessages');
                        validationMessage.style.display = 'block';
                        validationMessage.innerHTML = data.message;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error Adding Product');
                });
            });
            </script>
            
</script>
