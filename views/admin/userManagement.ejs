                </div>
                <div class="table-responsive">
                  <table class="table table-hover table-sm">
                    <thead>
                      <tr>
                        <th>No:</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Joined Date & Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(users.length > 0) { %>
                        <% for(let i = 0; i < users.length; i++) { %>
                          <tr>
                            <td><%= i + 1 %></td>
                            <td><%= users[i].firstName + ' ' + users[i].lastName %></td>
                            <td><%= users[i].email %></td>
                            <td><%= new Date(users[i].createdAt).toLocaleString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric' }) %></td>
                            <td><%= users[i].is_block ? 'Blocked' : 'Active' %></td>
                            <td>
                              <% if(!users[i].is_block) { %>
                                <button class="btn btn-info block-btn" style="width: 90px; height: 30px; border-radius: 7px;" onclick="blockAndUnblockUser('<%= users[i]._id %>', false)">Block</button>
                              <% } else { %>
                                <button class="btn btn-danger block-btn" style="width: 90px; height: 30px; border-radius: 7px;" onclick="blockAndUnblockUser('<%= users[i]._id %>', true)">Unblock</button>
                              <% } %>
                            </td>
                          </tr>
                        <% } %>
                      <% } else { %>
                        <tr>
                          <td colspan="6" class="text-center">Users not found</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>              
              </div>
            </div>
          </div>
        </div>
