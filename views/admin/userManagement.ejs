<script>
  function blockUser(userId) {
    fetch(`/admin/block-user/${userId}`, {
      method: 'PUT'
    }).then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Failed to block user.');
      }
    });
  }

  function unblockUser(userId) {
    fetch(`/admin/unblock-user/${userId}`, {
      method: 'PUT'
    }).then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Failed to unblock user.');
      }
    });
  }
</script>
