        <h4>Manage Orders</h4>
        <p class="text-gray">Review and manage orders from customers.</p>
      </div>
      <div class="content-viewport">
        <div class="row">
          <div class="col-12">
            <div class="grid">
              <div class="grid-body">
                <div class="item-wrapper">
                  <div class="table-responsive">
                    <table class="table info-table align-center">
                      <% if (orders.length > 0) { %>
                        <thead>
                          <tr>
                            <th>No:</th> <!-- Order Number Column -->
                            <th style="text-align: left;">Product</th>
                            <th style="text-align: center;">Order ID</th>
                            <th style="text-align: center;">Customer</th>
                            <th style="text-align: center;">Address</th>
                            <th style="text-align: center;">Date</th>
                            <th style="text-align: center;">Status</th>
                            <th style="text-align: center;">Actions</th>
                            <th style="text-align: center;">Price</th>
                            <th style="text-align: center;">Details</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% let orderNumber = (currentPage - 1) * 10 + 1; %> 
                          <% orders.forEach((order, i) => { %> 
                          <tr>
                            <td><%= orderNumber++ %></td> 
                            <td style="text-align: left;"><%= order.orderItems[0].productName %></td>
                            <%
                              function reduceOrderId(orderId, length) {
                                let arr = orderId.split(''); 
                                if (arr.length > length) {
                                  arr.splice(length); 
                                }
                                return arr.join(''); 
                              }
                              const shortenedOrderId = reduceOrderId(order._id.toString(), 10);
                            %>
                            <td><%= shortenedOrderId %></td>
                            <td><%= order.address.Name %></td>
                            <td><%= order.address.street%></td>
                            <td><%= new Date(order.orderDate).toDateString() %></td>
                            <td>
                              <h5 class="status"><%= order.orderStatus %></h5>
                            </td>
                            <td>
                              <% if(order.orderStatus === "order confirmed" || order.orderStatus === "shipped" || order.orderStatus === "delivered") { %> 
                                <% if(order.orderStatus === "delivered") { %>
                                    <span class="order-status-text" style="color: limegreen;">Delivered</span>
                                <% } else { %>
                                    <select class="order-status-dropdown" data-order-id="<%= order._id %>" onchange="updateOrderStatus(this)">
                                        <option value="order confirmed" <%= order.orderStatus === 'order confirmed' ? 'selected' : '' %>>Ordered</option>
                                        <option value="shipped" <%= order.orderStatus === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                        <option value="delivered" <%= order.orderStatus === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                    </select>
                                <% } %>
                            <% } else if(order.orderStatus === "Requested for Return") { %> 
                                <button type="button" class="btn-info btn-lg approve-btn" onclick="approveReturn('<%= order._id %>')">Approve</button>
                            <% } %>                            
                            </td>
                            <td>â‚¹<%= order.totalAmount %></td>
                            <td class="text-center">
                              <a href="#" class="btn btn-sm" style="background-color: #EDEDED; color: black;">View</a>
                            </td>
                          </tr>
                          <% }) %>
                        </tbody>
                      <% } else { %>
                        <p>No orders found.</p>
                      <% } %>                                           
                    </table>                    
