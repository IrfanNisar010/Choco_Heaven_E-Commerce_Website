                              <p class="card-text"><%= brands[i].description %></p>
                              <a href="/admin/editBrands?brandId=<%= brands[i]._id %>" class="btn btn-primary">Edit</a>
                              <a href="/admin/softDeleteBrands?brandId=<%= brands[i]._id %>" class="btn btn-danger">Delete</a>
                            </div>
                          </div>
                        </div>
                      <% } %>
                    <% } else { %>
                      <p>No brands found</p>
                    <% } %>
                  </div>
