<script>
var currentDate = new Date();

var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
var formattedDate = currentDate.toLocaleDateString('en-US', options);

document.getElementById('currentDate').textContent = formattedDate;
$(document).ready(function(){
  $('.dropdown-item').click(function(e){
    e.preventDefault(); // Prevent default anchor click behavior
    
    var selectedText = $(this).attr('data-target'); 
    $('#dropdownMenuButton').text(selectedText); // Update the button text
    
    var interval = $(this).attr('data-interval'); // Get the data-interval attribute
    fetchSalesData(interval); // Call the function to change sales data
    
    $('#dropdownMenuButton').dropdown('toggle'); // Toggle the dropdown
  });
});

// Function to fetch and update sales data
function fetchSalesData(interval) {
  // Placeholder function to simulate data fetching
  console.log('Fetching sales data for:', interval);
}

    // custom date
    document.getElementById('custom-date-form').addEventListener('submit', function(event) {
          event.preventDefault();
          if(!validDate(event)){
            return;
          }
          const startDate = document.getElementById('start-date').value;
          const endDate = document.getElementById('end-date').value;
          fetchSalesDataByDate(startDate, endDate);
      });


function fetchSalesData(interval) {
    const page = new URLSearchParams(window.location.search).get('page') || 1;
    fetch(`/admin/salesReport?interval=${interval}&page=${page}`)
        .then(response => response.json())
        .then(data => {
            updateSalesTable(data.salesReport, data.totalPages, data.currentPage);
        })
        .catch(error => console.error('Error:', error));
}

function fetchSalesDataByDate(startDate, endDate) {
    const page = new URLSearchParams(window.location.search).get('page') || 1;
    fetch(`/admin/salesReport?startDate=${startDate}&endDate=${endDate}&page=${page}`)
        .then(response => response.json())
        .then(data => {
            updateSalesTable(data.salesReport, data.totalPages, data.currentPage);
        }).then(() => {
            $('#customDateModal').modal('hide');
        })
        .catch(error => console.error('Error:', error));
}

function updateSalesTable(salesReport, totalPages, currentPage) {
    const tbody = document.querySelector('table tbody');
    tbody.innerHTML = ''; // Clear existing rows
    salesReport.forEach(order => {
        const row = document.createElement('tr');
        row.innerHTML = `
            <td>${order._id.slice(-8)}</td>
            <td>${new Date(order.orderDate).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' })}</td>
            <td>${order.address.Name}</td>
            <td>${order.address.Mobile}</td>
            <td>${order.orderItems.map(item => `<p>${item.productName.length > 20 ? item.productName.slice(0, 20) + '...' : item.productName}</p>`).join('')}</td>
            <td>${order.orderItems.map(item => `<p>${item.brandId}</p>`).join('')}</td>
            <td>${order.orderStatus}</td>
            <td>â‚¹${order.totalAmount}</td>
        `;
        tbody.appendChild(row);
    });

    const pagination = document.querySelector('.pagination');
    pagination.innerHTML = '';
    for (let i = 1; i <= totalPages; i++) {
        const pageItem = document.createElement('li');
        pageItem.classList.add('page-item', currentPage === i ? 'active' : '');
        pageItem.innerHTML = `<a class="page-link" href="?page=${i}">${i}</a>`;
        pagination.appendChild(pageItem);
    }
}

function validDate(event) {
    const startDate = new Date(document.getElementById('start-date').value);
    const endDate = new Date(document.getElementById('end-date').value);
    const currentDate = new Date();
    if (startDate > currentDate || endDate > currentDate || startDate > endDate) {
        document.getElementById('error-message').style.display = 'block';
        document.getElementById('error-message').textContent = 'Invalid Date Selection';
        return false;
    } else {
        document.getElementById('error-message').style.display = 'none';
        return true;
    }
}

  // pdf
  function downloadPDF(divId) {
    const element = document.getElementById(divId); 

    html2canvas(element).then(canvas => {
        const imgData = canvas.toDataURL('image/png');
        const pdf = new window.jspdf.jsPDF({
            orientation: 'portrait',
        });
        const imgProps= pdf.getImageProperties(imgData);
        const pdfWidth = pdf.internal.pageSize.getWidth();
        const pdfHeight = (imgProps.height * pdfWidth) / imgProps.width;
        pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
        pdf.save('SalesReport.pdf');
    });
}
function downloadExcel() {
    const tableRows = document.querySelectorAll('.cart-table tbody tr');
    const data = Array.from(tableRows).map(row => {
        const cells = row.querySelectorAll('td');
        const productNames = Array.from(cells[4].querySelectorAll('p')).map(p => p.textContent.trim()).join(', ');
        const brandIds = Array.from(cells[5].querySelectorAll('p')).map(p => p.textContent.trim()).join(', ');

        return {
            orderId: cells[0].textContent.trim(),
            orderDate: cells[1].textContent.trim(),
            userName: cells[2].textContent.trim(),
            phone: cells[3].textContent.trim(),
            productName: productNames,
            brands: brandIds,
            status: cells[6].textContent.trim(),
            totalAmount: cells[7].textContent.trim(),
        };
    });

    console.log('Extracted Data:', data);

    fetch('/admin/downloadExcel', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ data: data }),
    })
    .then(response => response.blob())
    .then(blob => {
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.style.display = 'none';
        a.href = url;
        a.download = 'sales-report.xlsx';
        document.body.appendChild(a);
        a.click();
        window.URL.revokeObjectURL(url);
    })
    .catch(error => console.error('Error downloading Excel:', error));
}


</script>
