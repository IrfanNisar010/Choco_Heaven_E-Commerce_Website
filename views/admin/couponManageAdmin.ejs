<script>
   function couponStatusChange(couponId,status) {
        Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: status ? "Yes" : "No",
          cancelButtonText: "No, cancel!",
          reverseButtons: true
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/admin/couponStatusChange?couponId=${couponId}`, {
              method: 'GET' 
            })
            .then(response => {
              if (response.ok) {
                Swal.fire({
                  title: status ? "Coupon Inactivated!" : "Coupon Activated!",
                  text: status ? "The Coupon has been Inactivated." : "The Coupon has been Activated.",
                  icon: "success"
                }).then(() => {
                  window.location.reload();
                });
              } else {
                Swal.fire({
                  title: "Error",
                  text: "An error occurred while changing coupon status.",
                  icon: "error"
                });
              }
            })
            .catch(error => {
              
              console.error("Error:", error);
              Swal.fire({
                title: "Error",
                text: "An error occurred while changing coupon status.",
                icon: "error"
              });
            });
          }
        });
      }

</script>

